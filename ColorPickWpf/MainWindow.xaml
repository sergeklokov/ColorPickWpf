<Window x:Class="ColorPickWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPickWpf" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnPickColor" Content="Pick Color Button"
                HorizontalAlignment="Left" Margin="53,57,0,0"
                VerticalAlignment="Top" Height="61" Width="201"
                FontWeight="Bold" FontFamily="Segoe UI"
                Grid.Row="0"
                Click="btnPickColor_Click"/>
        <xctk:ColorPicker x:Name="colorPicker"
                          SelectedColorChanged="ColorPicker_SelectedColorChanged"
                          Grid.Row="1"
                          Visibility="Collapsed"
                          Focusable="True"/>
    </Grid>
</Window>
