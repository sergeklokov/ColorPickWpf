<Window x:Class="ColorPickWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPickWpf" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Canvas fills the entire window -->
        <Canvas x:Name="drawCanvas"
                Background="White"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Panel.ZIndex="0"/>
        <!-- Overlay grid for controls, aligned to the left, vertical layout -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button x:Name="btnPickColor" Content="Pick Color Button"
                    Margin="10"
                    Height="40" Width="150"
                    FontWeight="Bold" FontFamily="Segoe UI"
                    Grid.Row="0"
                    Click="btnPickColor_Click"/>
            <Button x:Name="btnDraw" Content="Draw Point"
                    Margin="10"
                    Height="40" Width="150"
                    FontWeight="Bold" FontFamily="Segoe UI"
                    Grid.Row="1"
                    Click="btnDraw_Click"/>
            <xctk:ColorPicker x:Name="colorPicker"
                              SelectedColorChanged="ColorPicker_SelectedColorChanged"
                              Visibility="Collapsed"
                              Focusable="True"
                              Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>
